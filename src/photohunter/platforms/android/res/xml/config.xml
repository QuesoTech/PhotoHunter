<?xml version='1.0' encoding='utf-8'?>
<widget id="com.photohunter.photohunter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="FacebookConnectPlugin">
        <param name="android-package" value="org.apache.cordova.facebook.ConnectPlugin" />
    </feature>
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="https://*.fbcdn.net" />
    <access origin="https://*.akamaihd.net" />
    <splash height="1920" src="res/drawable/logo.png" width="1080" />
    <icon height="57" src="res/drawable/logo.png" width="57" />
    <name>Photohunter</name>
    <description>
        Hunt for new photos to take in your area and earn points to become the best!
    </description>
    <author email="dev@quesotech.com" href="quesotech.com">
        QuesoTech
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
